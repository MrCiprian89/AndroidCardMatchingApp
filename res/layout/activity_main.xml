
<!--   Card Matching Memory Game -->
<!--   An app that displays 16 random pairs of cards that the user must click and match within the alloted time -->
<!--   Authors: Stephen Ciprian and Anirudh Bathini -->
<!--   Date: 17 April, 20015 -->
 




<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="fill_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.memorygameapp.MainActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/titleTextView"
            android:layout_gravity="center"
            android:text="Maching Game"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="2"
                 android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"
/>

            <TextView
                android:id="@+id/timertextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timer:" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="2"
                android:clickable="false" 
        		android:cursorVisible="false" 
        		android:focusable="false" 
        		android:focusableInTouchMode="false"/>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/displayMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pick a card any card" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="4"
            android:gravity="center"
            android:rowCount="4" >

            <ImageButton
                android:id="@+id/ImageButton01"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton02"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton03"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton04"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton05"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton06"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton07"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton08"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton09"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton10"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton11"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton12"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton13"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton14"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton15"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

            <ImageButton
                android:id="@+id/ImageButton16"
                android:layout_gravity="left"
                android:src="@drawable/cardback" />

        </GridLayout>

    </TableRow>

</TableLayout>
